<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				   xmlns:s="library://ns.adobe.com/flex/spark" 
				   xmlns:mx="library://ns.adobe.com/flex/mx" 
				   width="100%" backgroundAlpha="1" backgroundColor="#EFEFEF" borderVisible="false">
	<s:layout>
		<s:HorizontalLayout verticalAlign="middle"/>
	</s:layout>

	<fx:Script>
		<![CDATA[
			[Bindable]
			public var title:String;
		]]>
	</fx:Script>
	<s:Label fontSize="16" text="{title}" paddingLeft="8" id="titleLabel"/>
	
	<s:Spacer width="100%"/>
	<s:Button width="40" label="Up" id="upButton"/>
	<s:Button width="40" label="Down" id="downButton"/>
	
	<s:Spacer width="2"/>
</s:BorderContainer>
